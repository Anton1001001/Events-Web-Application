{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "JwtOptions": {
    "SecretKey": "YourSuperSecretKey12345YourSuperSecretKey12345YourSuperSecretKey12345",
    "Issuer": "Issuer",
    "Audience": "Audience",
    "ExpiresMinutes": 30,
    "RefreshTokenTtl" : 2,
    "RefreshTokenLength" : 64
  },

  "AuthorizationOptions": {
    "RolePermissions": [
      {"Role": "Admin", "Permissions": ["Create", "Read", "Update", "Delete"]},
      {"Role": "User", "Permissions": ["Read"]}
    ]
  },

  "AllowedHosts": "*"
}
